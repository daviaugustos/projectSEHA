
@{
    ViewBag.Title = "SEHA - Change Password";
    //Gambiarra(?)
    var user = Session["Professor"] as ProjectSeha.Entity.Pessoa;
    if (Session["Professor"] != null)
    {
        Layout = "~/Views/templates/templateUser/_headerUser.cshtml";
    }
    else
    {
        user = Session["Admin"] as ProjectSeha.Entity.Pessoa;
        Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
    }
}

<!-- Principal Content -->
@if (ViewBag.Sucesso != null)
{
    <div class="alert alert-success mensagem-seha" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.Sucesso
    </div>
}
else if (ViewBag.Erro != null)
{
    <div class="alert alert-danger mensagem-seha" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.Erro
    </div>
}
<section id="profile">
    <div class="container-fluid">
        <div class="row">

            <form action="/default/Password" method="post">
                <div class="col-md-6 col-md-offset-3">
                    <input hidden name="PessoaId" id="PessoaId" value="@user.PessoaId" />

                    <div class="col-md-12">
                        <input autofocus name="senhaAntiga" placeholder="Type your old password" type="password" class="form-control" id="senhaAntiga" style="margin: 20px 0px" />
                    </div>

                    <div class="col-md-12">
                        <input name="senhaNova" placeholder="Type your new password" type="password" class="form-control" id="senhaNova" style="margin: 20px 0px" />
                    </div>

                    <div class="col-md-12">
                        <input name="confirmaSenha" placeholder="Confirm your new password" type="password" class="form-control" id="confirmaSenha" style="margin: 20px 0px" />
                    </div>

                    <div class="col-md-3 col-md-offset-3">
                        @if (Session["Professor"] != null)
                        {
                            <a href="/user/availability" class="btn btn-seha1" id="cancelPassword" style="width: 100%">Cancel</a>
                        }
                        else
                        {
                            <a href="/admin/semesters" class="btn btn-seha1" id="cancelPassword" style="width: 100%">Cancel</a>
                        }
                    </div>

                    <div class="col-md-3">
                        <button type="submit" class="btn btn-seha2" id="savePassword" style="width: 100%">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
</section>
