@model ProjectSeha.Entity.Curso 
@{
    ViewBag.Title = "update";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}
<h3 class="font-seha left">Courses</h3>

<div id="courses" class="container">
    <form action="/courses/update/@Model.CursoId" method="post">
        <div class="row">
            <div class="col-xs-6 form-group">
                <label for="txtTituloCurso">Title</label>
                <input id="txtTituloCurso" type="text" name="Titulo" class="form-control" size="25 " value="@Model.Titulo" />
            </div>
        </div>
        <div class="row" style="margin-left:18px;">
            <label>Turn</label>
            <div class="form-group" style="width:200px;">
                <select name="Turno" class="form-control">
                    <option value="">Select a turn</option>
                    @{  if (Model.Turno == "Morning")
                        {
                            <option value="Morning" selected>Morning</option>
                        }
                        else
                        {
                            <option value="Morning">Morning</option>
                        }

                        if (Model.Turno == "Afternoon")
                        {
                            <option value="Afternoon" selected>Afternoon</option>
                        }
                        else
                        {
                            <option value="Afternoon">Afternoon</option>
                        }

                        if (Model.Turno == "Evening")
                        {
                            <option value="Evening" selected>Evening</option>
                        }
                        else
                        {
                            <option value="Evening">Evening</option>
                        }
                    } 
                </select>
            </div>
        </div>
        <div class="row">
            <div id="professor-buttons">
                <a class="btn btn-seha1" href="/courses/index">
                    Cancel
                </a>
                <button class="btn btn-seha2" type="submit">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>
