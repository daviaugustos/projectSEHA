@{
    ViewBag.Title = "SEHA - Register Courses";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}
<div class="row form-group">
    <div class="col-xs-12">
        <ul class="nav nav-pills nav-justified thumbnail setup-panel">
            <li class="active">
                <a href="">
                    <h4 class="list-group-item-heading">Course</h4>
                </a>
            </li>
            <li>
                <a>
                    <h4 class="list-group-item-heading">Disciplines</h4>
                </a>
            </li>
        </ul>
    </div>
</div>
<h3 class="font-seha left">Course informations</h3>

<div id="courses" class="container">
    <form action="/courses/GoToDisciplina" method="post">
        <div class="row">
            <div class="col-xs-6 form-group">
                <label for="txtTituloCurso">Title</label>
                <input id="txtTituloCurso" type="text" name="Titulo" class="form-control" size="25 " value="@ViewBag.TituloCurso" />
            </div>
        </div>
        <div class="row" style="margin-left:18px;">
            <label>Turn</label>
            <div class="form-group" style="width:200px;">
                <select name="Turno" class="form-control">
                    <option value="">Select a turn</option>
                    @{  if (ViewBag.TurnoCurso == "Morning")
                        {
                            <option value="Morning" selected>Morning</option>
                        }
                        else
                        {
                            <option value="Morning">Morning</option>
                        }

                        if (ViewBag.TurnoCurso == "Afternoon")
                        {
                            <option value="Afternoon" selected>Afternoon</option>
                        }
                        else
                        {
                            <option value="Afternoon">Afternoon</option>
                        }

                        if (ViewBag.TurnoCurso == "Evening")
                        {
                            <option value="Evening" selected>Evening</option>
                        }
                        else
                        {
                            <option value="Evening">Evening</option>
                        }
                    }
                </select>
            </div>
        </div>

        <div class="row">
            <div id="_MenuDisciplinas"></div>
        </div>
        <div class="row">
            <div id="professor-buttons">
                <a class="btn btn-seha1" href="/courses/index">
                    Cancel
                </a>
                <button class="btn btn-seha2" type="submit">
                    Next
                </button>
            </div>
        </div>
    </form>
</div>




