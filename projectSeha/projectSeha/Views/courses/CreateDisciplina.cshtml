@{
    ViewBag.Title = "SEHA - Register Subjects";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}

<h3 class="font-seha left">Add subjects</h3>

@if (ViewBag.Erro != null)
{
    <div style="margin-top:15px;" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.Erro
    </div>
}

<div id="courses" class="font-seha">
    <form action="/courses/AddDisciplinaLista" method="post">
        <div class="row">
            <label>Semester</label>
            <div class="form-group" style="width:150px;">
                <select required id="Periodo" name="Periodo" class="form-control">
                    <option value="1">First</option>
                    <option value="2">Second</option>
                    <option value="3">Third</option>
                    <option value="4">Fourth</option>
                    <option value="5">Fifth</option>
                    <option value="6">Sixth</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 form-group">
                <label for="txtTituloDisciplina">Subject title</label>
                <input required id="txtTituloDisciplina" type="text" name="TituloDisciplina" class="form-control" size="25" />
            </div>
            <div class="col-xs-2 form-group">
                <label for="txtSigla">Initials</label>
                <input required maxlength="3" id="txtSigla" type="text" name="SiglaDisciplina" class="form-control" size="5" />
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-xs-2">
                    <label for="txtQtdAulasMinistradas">Number of classes</label>
                    <input required min="2" max="4" id="txtQtdAulasMinistradas" type="number" name="QtdAulasMinistradas" class="form-control" size="3" />
                </div>
            </div>
        </div>

        <div id="professor-buttons" style="width:65%">
            <a class="btn btn-seha1" href="/courses/MenuDisciplinas">
                Cancel
            </a>
            <button class="btn btn-seha2" id="btnAddDisciplina" type="submit">
                Add
            </button>
        </div>
    </form>
</div>
