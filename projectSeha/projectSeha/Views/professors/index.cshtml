@model IEnumerable<ProjectSeha.Entity.Professor>
@{
    ViewBag.Title = "SEHA - Professors";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}

<h3 class="font-seha" style="text-align:left">Professors</h3>

<div class="container" style="padding-top:30px;">
    <div class="table-seha prof">
        <input class="form-group form-control" placeholder="Search Professor" />

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Exists</th>
                    <th>Activate</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr onclick="location.href = '/admin/steps';">
                        <td>@p.PessoaId</td>
                        <td>@p.Nome</td>
                        <td>@p.ProfessorExiste</td>
                        <td>@p.ProfessorAtivo</td>
                        <td>
                            <div>
                                <a href="/professor/delete/@p.PessoaId">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <a style="margin-top:20px;" class="btn btn-seha2" href="/professors/create">
            New Professor
        </a>
    </div>
</div>







