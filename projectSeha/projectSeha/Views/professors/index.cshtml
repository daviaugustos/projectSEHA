@model IEnumerable<ProjectSeha.Entity.Professor>
@{
    ViewBag.Title = "SEHA - Professors";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}

<h3 class="font-seha left">Professors</h3>

@if (ViewBag.Erro != null)
{
    <div style="margin-top:15px;" class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        @ViewBag.Erro
    </div>
}

<div id="professor" class="container">
    <div class="table-seha prof">
        <input class="form-group form-control search" placeholder="Search Professor" />

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Exists</th>
                    <th>Activate</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.PessoaId</td>
                        <td>@p.Nome</td>
                        <td>@p.ProfessorExiste</td>
                        <td>@p.ProfessorAtivo</td>
                        <td>
                            <div>
                                <a href="/professors/delete/@p.PessoaId">
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <a class="btn btn-seha2" href="/professors/create">
            New Professor
        </a>
    </div>
</div>







