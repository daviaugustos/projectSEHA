@model ProjectSeha.Entity.Professor
@{var i = 1;}

<!-- Principal Content -->


<div class="avaiability">

    @if (ViewBag.ListDisponibilidade.Count > 0)
    {
        <input id="existeDisponibilidade" disabled hidden />
    }

    <input id="PessoaId" disabled hidden value="@Model.PessoaId" />

    <div class="row">

        <!--Avaiability-->
        <div id="availability" class="col-md-9">
            <div class="disp-content">

                <p id="avaiability-title" class="font-seha font-seha-title">Fill the blocks according to your availability</p>

                <div id="availability-hours">
                    <label class="font-seha font-seha-info" for="lbl-aulas">You have </label>
                    <label class="font-seha font-seha-info" id="lbl-aulas"><span id="horas">@Model.HorasAula</span> assigned hours</label>
                </div>
                <!-- Slots -->

                <div class="slots font-seha">

                    <!-- Slots hours -->

                    <div class="slots-left">
                        <div class="slots-content-desactive">
                            <p>Hours</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>7:40 to 9:20</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>9:30 to 11:10</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>11:20 to 13:00</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>13:10 to 14:50</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>15:00 to 16:40</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>16:50 to 18:30</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>19:00 to 20:40</p>
                        </div>
                        <div class="slots-content-desactive">
                            <p>20:50 to 22:30</p>
                        </div>
                    </div>

                    <!-- Slots Monday -->

                    <div class="slots-left">
                        <div class="slots-content-desactive">
                            <p>Monday</p>
                        </div>
                        @for (i = 1; i <= 8; i++)
                        {
                            var lista = (List<ProjectSeha.Entity.Disponibilidade>)ViewBag.ListDisponibilidade;
                            var d = lista.Find(item => item.CodSlot == i);
                            if (d != null)
                            {
                                if (d.Status_slot)
                                {
                                    <div class="slots-content disponivel">
                                        <input hidden disabled value="@i" />
                                    </div>
                                }
                                else if (d.Status_slot == false)
                                {
                                    <div class="slots-content talvez">
                                        <input hidden disabled value="@i" />
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="slots-content">
                                    <input hidden disabled value="@i" />
                                </div>
                            }
                        }
                    </div>

