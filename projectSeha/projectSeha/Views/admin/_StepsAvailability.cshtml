@model ProjectSeha.Entity.Professor
@{var i = 1;}



<div class="avaiability" style="margin-top: 20px;">

    @if (ViewBag.ListDisponibilidade.Count > 0)
    {
        <input id="existeDisponibilidade" disabled hidden />
    }

    <input id="PessoaId" disabled hidden value="@Model.PessoaId" />
    
