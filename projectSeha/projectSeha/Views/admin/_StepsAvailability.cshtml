                    <button class="btn slots-tbutton" id="available">Available</button>
                    <button class="btn slots-tbutton" id="maybe">Maybe</button>
                </div>

                <div class="slots-buttons">
                    <button disabled id="#btn-availability-save" class="btn slots-save">Save</button>
                    <button id="#btn-availability-clear" class="btn slots-clear">Clear</button>
                </div>

                <div class="progress-bar" role="progressbar" aria-valuenow="0"
                     aria-valuemin="0" aria-valuemax="100">
                    <label>0%</label>
                </div>

                <!--Observation-->
                <div class="observation" id="steps-obs">
                    <p class="font-seha-info">Notes:</p>
                    <textarea id="txt-area" disabled>@Model.Observacoes</textarea>
                </div>
            </div>
        </div>

        
