@{
    ViewBag.Title = "SEHA - Semesters";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}

<div id="semesters">
    <div class="center-small">
        <p class="font-seha font-seha-info">There is no semesters in progress.</p>
        <div id="buttons-semester">
            <a id="btn-new-semester" class="btn btn-default btn-seha2" href="/admin/steps">New Semester</a>
        </div>
    
        <div>
            <table class="table table-semesters">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in ViewBag.ListLembrete)
                    {
                        <tr>
                            <td style="max-width: 175px; max-height: 37px;">@l.Data</td>
                            <td style="max-width: 255px; max-height: 37px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@l.Conteudo</td>
                            <td style="max-width: 70px; max-height: 37px;">
                                <div>
                                    <a href="">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <form action="/" method="post">
            <div class="observation">
                <textarea placeholder="Write your reminders to the professors..."></textarea>
                <button type="submit" id="btn-send-semester" class="btn btn-seha1">Send</button>
            </div>
        </form>
    </div>

    <div class="modal-lembrete">
        <div class="col-md-4 col-md-offset-4" style="height: 400px; margin-top: 200px; background-color: #607D8B; color: white">
            <strong><p class="dateLemb" style="margin-top: 10px; margin-left: 5px;"></p></strong>
            <div style="position: absolute; width: 450px; height: 320px; left: 50%; right: 50%; margin-left: -225px; margin-top: 0; background-color: white; color: black; padding: 20px">
                <p class="contentLemb" style="word-wrap: break-word"></p>
            </div>           
            <div style="position: absolute; bottom: 20px; left: 50%; margin-left: -35px">
                <button id="fecharLemb" class="btn btn-seha2">Fechar</button>
            </div>   
        </div>
    </div>

</div>