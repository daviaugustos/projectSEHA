
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/templates/templateAdmin/_headerAdmin.cshtml";
}

<style>
    .dashboard {
        margin-top: 50px;
    }
    .dashboard .col-md-4 {
        text-align: center;
    }
    .dashboard p {
        color: #607d8b;
        font-size: 30px;
        font-weight: 700;
    }
</style>

<div class="col-md-12 dashboard">
    <div class="col-md-4">
        <p>@ViewBag.QtdProfessor</p>
        <h3 class="label-dashboard">Registered Professors</h3>
    </div>
    <div class="col-md-4">
        <p>@ViewBag.QtdCourse</p>
        <h3 class="label-dashboard">Registered Courses</h3>
    </div>
    <div class="col-md-4">
        <p>@ViewBag.QtdDiscp</p>
        <h3 class="label-dashboard">Registered Disciplines</h3>
    </div>
</div>
<div class="col-md-12 dashboard">
    <div class="col-md-8 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Professors</th>
                    <th>Hours</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in ViewBag.ListProfessor)
                {
                    <p>@p.professorName</p>
                    foreach (var d in ViewBag.ListDisp)
                    {
                        if (d.idProfessor = p.idProfessor)
                        {
                            <tr>
                                <td>@d.hours</td>
                                if (d.day == 1)
                                {
                                    <td>Segunda</td>
                                } else if(d.day == 2)
                                {
                                    <td>Terça</td>
                                }
                                <td>@d.status</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>

